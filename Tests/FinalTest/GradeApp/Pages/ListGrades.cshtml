@page
@using GradeApp.Pages
@model GradeApp.Pages.ListGrades

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>List of grades --- Grade App</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
<div style="margin-top: 50px; display: flex; flex-direction: column; justify-content: center; align-items: center">
    <h2>List of grades:</h2>
    <table class="table table-hover" style="margin: 10px 10px 10px 10px; max-width: 80%">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Subject</th>
            <th scope="col">Grade</th>
        </tr>
        </thead>
        <tbody>
        @foreach (GradeApp.Data.Grade p in Model.Grades)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Subject</td>
                <td>@p.Value</td>
            </tr>
        }
        </tbody>
    </table>
</div>
</body>
</html>